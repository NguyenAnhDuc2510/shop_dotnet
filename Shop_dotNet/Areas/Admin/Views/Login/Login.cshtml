<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css" integrity="sha512-SzlrxWUlpfuzQ+pcUCosxcglQRNAq/DZjVsC0lE40xsADsfeQoEypE+enwcOiGjk/bSuGGKHEyjSoQ1zVisanQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <link rel="icon" href="favicon.ico" type="image/x-icon" />

    <title>:: Soccer :: Login</title>

    <!-- Bootstrap Core and vandor -->
    <link rel="stylesheet" href="/Areas/Admin/Assets/plugins/bootstrap/css/bootstrap.min.css" />

    <!-- Core css -->
    <link rel="stylesheet" href="/Areas/Admin/Assets/css/main.css" />
    <link rel="stylesheet" href="/Areas/Admin/Assets/css/theme1.css" />

</head>
<body class="font-montserrat">

    <div class="auth">
        <div class="auth_left">
            <div class="card">
                <div class="text-center mb-2">
                    <a class="header-brand" href="index-2.html"><i class="fa fa-soccer-ball-o brand-logo"></i></a>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm())
                    {
                        <div class="card-title">Đăng nhập</div>
                        <div class="form-group">
                            <select class="custom-select">
                                <option>Project Manager</option>
                                <option>Team Leader</option>
                                <option>Employee</option>
                            </select>
                        </div>
                        <div class="form-group">
                            @Html.TextBoxFor(model => model.email, new { @class = "form-control", placeholder = "UserName" })
                        </div>
                        <div class="form-group">
                            <label class="form-label">Mật khẩu<a href="forgot-password.html" class="float-right small">I forgot password</a></label>
                              @Html.PasswordFor(model => model.passsword, new { @class = "form-control", placeholder = "Password" })
                        </div>
                        <div class="form-group">

                        </div>
                        <div class="form-footer">
                            <button type="submit" class="btn btn-primary btn-block" title="">Đăng nhập</button>
                        </div>
                    }
                </div>

            </div>
        </div>
        <div class="auth_right full_img"></div>
    </div>

    <script src="/Areas/Admin/Assets/bundles/lib.vendor.bundle.js"></script>
    <script src="/Areas/Admin/Assets/js/core.js"></script>
</body>

